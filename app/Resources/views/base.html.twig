<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}SANASA{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    {% endblock %}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

</head>

<body>

{% block header %}
    <header>
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('homepage') }}">
                        SANASA
                    </a>
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">

                        {% block header_navigation_links %}
                            <li><a href="{{ path('homepage') }}"><i class="fa fa-home"></i> Homepage</a></li>

                            {% if app.user and is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('member_homepage') }}"><i class="fa "></i> Members</a></li>
                                <li><a href="{{ path('account_homepage') }}"><i class="fa "></i> Accounts</a></li>
                            {% endif %}

                        {% endblock %}

                        {# Log in/out section #}
                        {% if app.user %}
                            <li><a href="{{ path('security_logout') }}"> <i class="fa fa-sign-out"></i> Sign out </a></li>
                        {% else %}
                            <li><a href="{{ path('security_login_form') }}"><i class="fa fa-sign-in"></i> Sign in </a></li>
                        {% endif %}

                    </ul>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

<div class="container body-container">
    {% block body %}
        <div class="row">

            <div id="main" class="col-sm-9">
                {% block main %}<h1> SANASA </h1>
                {% endblock %}
            </div>

            <div id="sidebar" class="col-sm-3">
                {% block sidebar %}
                    <div class="section about">
                        <div class="well well-lg">
                            {% block side_navigation %}
                            {% endblock %}
                        </div>
                    </div>
                    <div class="section about">
                        <div class="well well-lg">
                            {% block about %}
                            {% endblock %}
                        </div>
                    </div>
                {% endblock %}
            </div>

        </div>
    {% endblock %}
</div>

{% block footer %}
    <footer>
        <div class="container">
            <div class="row">
                <div id="footer-copyright" class="col-md-6">
                    <p>&copy; {{ 'now'|date('Y') }} SANASA</p>

                    <p>ic_license</p>
                </div>
                <div id="footer-resources" class="col-md-6">

                </div>
            </div>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}
</body>
</html>
